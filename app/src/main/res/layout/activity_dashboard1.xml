<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".Dashboard1Activity">

    <TextView
        android:id="@+id/tvSpatuan"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:letterSpacing="0.4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Solusi Terbaik untuk Sepatu Bersih, Segar, dan Terawat !"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSpatuan" />

    <ImageView
        android:id="@+id/myIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:contentDescription="Back Icon"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Deep Clean"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/myIcon"
        app:layout_constraintTop_toTopOf="@id/myIcon" />

    <View
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myIcon"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="79dp"
        android:layout_height="30dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/rounded_button"
        android:drawableStart="@drawable/baseline_add_24"
        android:drawablePadding="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/TextDescription" />

    <LinearLayout
        android:id="@+id/container_detail"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="177dp"
            android:background="@drawable/box_frame"
            android:src="@drawable/deep_clean" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 35.000"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Deep clean adalah layanan pembersihan total sepatu, dari luar hingga dalamâ€”termasuk insole, upper, midsole, dan tali. Bersih, higienis, dan terawat di setiap bagian."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cocok untuk semua jenis sepatu."
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="124dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:background="#FAFF00"
        android:gravity="center"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_detail" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="241dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="4dp"
        android:text="- Bagian Luar : Bersihkan noda dan debu dengan produk khusus yang aman untuk semua bahan.
\n- Insole : Dicopot dan dibersihkan untuk hilangkan kotoran, bau, dan bakteri.
\n- Upper : Setiap sisi dibersihkan menyeluruh untuk menjaga warna dan tekstur.
\n- Midsole : Dibersihkan hati-hati agar tetap nyaman dan awet saat digunakan.
\n- Laces : Tali dicuci bersih agar tampak segar dan berfungsi optimal.
\n- Prose : Pengerjaan selama 3 hari"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>
